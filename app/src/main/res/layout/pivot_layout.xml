<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/SettingBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:visibility="visible"
        android:src="@drawable/small_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/logo"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pivot_item_0"
            style="@style/PivotItem"
            android:layout_weight="1"
            android:alpha="0.3"
            android:text="FEATURED" />

        <TextView
            android:id="@+id/pivot_item_1"
            style="@style/PivotItem"
            android:layout_weight="1"
            android:alpha="1"
            android:text="NEW" />

        <TextView
            android:id="@+id/pivot_item_2"
            style="@style/PivotItem"
            android:layout_weight="1"
            android:alpha="0.3"
            android:text="RANDOM" />
    </LinearLayout>

    <ImageView
        android:id="@+id/more_btn"
        android:layout_width="50dp"
        android:layout_height="@dimen/pivot_title_bar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:alpha="0.3"
        android:src="@drawable/ic_more" />
</RelativeLayout>