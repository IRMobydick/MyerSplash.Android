<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF151515"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pivot_item_0"
            style="@style/PivotItem"
            android:layout_marginLeft="30dp"
            android:alpha="0.3"
            android:text="FEATURED"/>

        <TextView
            android:id="@+id/pivot_item_1"
            style="@style/PivotItem"
            android:alpha="1"
            android:text="NEW"/>

        <TextView
            android:id="@+id/pivot_item_2"
            style="@style/PivotItem"
            android:alpha="0.3"
            android:text="RANDOM"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/more_btn"
        android:layout_width="@dimen/pivot_bar_element_width"
        android:layout_height="@dimen/pivot_title_bar_height"
        android:layout_alignParentRight="true"
        android:alpha="0.3"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:src="@drawable/ic_more"/>
</RelativeLayout>